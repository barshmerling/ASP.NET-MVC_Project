@model FinalProjectMovies.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Edit a Post</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="ReviewTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReviewTitle" class="form-control" />
                <span asp-validation-for="ReviewTitle" class="temodel.CommentPost.PostTitlext-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReviewWriterName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReviewWriterName" class="form-control" />
                <span asp-validation-for="ReviewWriterName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReviewDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReviewDate" class="form-control" />
                <span asp-validation-for="ReviewDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReviewContent" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReviewContent" class="form-control" />
                <span asp-validation-for="ReviewContent" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
