
@model FinalProjectMovies.Models.Movie

@{
    ViewBag.Title = "Details";

}

<h2>Details</h2>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.PosterOfMovie)</dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.PosterOfMovie)" style="width:150px; height: 200px" />
        </dd>

        <dt>@Html.DisplayNameFor(model => model.DirectorOfMovie)</dt>
        <dd>@Html.DisplayFor(model => model.DirectorOfMovie)</dd>

        <dt>@Html.DisplayNameFor(model => model.GenreOfMovie)</dt>
        <dd>@Html.DisplayFor(model => model.GenreOfMovie)</dd>

        <dt>@Html.DisplayNameFor(model => model.NameOfMovie)</dt>
        <dd>@Html.DisplayFor(model => model.NameOfMovie)</dd>

        <dt>@Html.DisplayNameFor(model => model.RatingOfMovie)</dt>
        <dd>@Html.DisplayFor(model => model.RatingOfMovie)</dd>

        <dt>@Html.DisplayNameFor(model => model.ReleaseYearOfMovie)</dt>
        <dd>@Html.DisplayFor(model => model.ReleaseYearOfMovie)</dd>

        <dt>@Html.DisplayNameFor(model => model.SummaryOfMovie)</dt>
        <dd>@Html.DisplayFor(model => model.SummaryOfMovie)</dd>

        <dt>@Html.DisplayNameFor(model => model.VideoOfMovie)</dt>
        <dd><iframe width="250" height="180" src="@Html.DisplayFor(model => model.VideoOfMovie)"></iframe></dd>

