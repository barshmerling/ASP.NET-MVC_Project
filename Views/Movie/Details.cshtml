        <dd>@Html.DisplayFor(model => model.VotesOfMovie)</dd>
        <dt> Share to Facebook</dt>
        <dd>
            <div id="fb-root"></div>
            <script>

(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
